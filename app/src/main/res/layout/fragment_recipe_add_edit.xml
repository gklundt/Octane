<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="edu.uco.schambers4.octane.Fragments.Recipes.RecipeAddEditFragment">

    <TextView
        android:id="@+id/recipe_name_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name_et"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/name_lbl"
        />

    <EditText
        android:id="@id/name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/recipe_name_lbl"
        android:gravity="end"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingredients_list"
        android:layout_below="@id/recipe_name_lbl"
        android:id="@+id/recipe_ingredients_lbl"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/recipe_ingredients_lbl"
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/recipe_ingredients_list_view"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_ingredients_list_view"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_action_add"
        android:backgroundTint="@color/colorAccent"
        />

</RelativeLayout>
