<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/workout_exercise_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/workout_exercise_resistance_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1 Body"/>

        <TextView
            android:id="@+id/workout_exercise_measure_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LastName"/>

        <Spinner
            android:id="@+id/workout_exercise_sets_sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/set_counts"
            android:text="LastName"/>

        <CheckBox
            android:id="@+id/workout_exercise_select_all_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>